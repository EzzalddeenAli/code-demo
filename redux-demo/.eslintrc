{
  "parser": "babel-eslint",
  "extends": [
    "standard",
     "standard-react"
   ],
  "plugins": [
    "flow-vars"
  ],
  "rules": {
    "indent": [2, 2, { "SwitchCase": 1 }],
    "semi" : [2, "never"],
    "max-len": [2, 120, 2],
    "flow-vars/define-flow-type": 1,
    "flow-vars/use-flow-type": 1
  },
  "env": {
    "es6": true,
    "browser": true,
    "mocha": true,
  }

}
